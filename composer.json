{
  "name": "xzones2014/inertia-ci4",
  "description": "The Codeigniter 4 adapter for inertia.js",
  "license": "MIT",
  "type": "library",
  "version": "0.1.0",
  "authors": [
    {
      "name": "Abdul Gafur",
      "email": "gafur.zones2007@gmail.com"
    },
    {
      "name": "Krishna Gujjjar",
      "email": "krishnagujjjar@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "codeigniter4/framework": "^4.5"
  },
  "require-dev": {
    "codeigniter/coding-standard": "^1.8",
    "ergebnis/composer-normalize": "^2.44",
    "pestphp/pest": "^2.35",
    "pestphp/pest-plugin-type-coverage": "^2.8",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^10.5 || ^11.0",
    "rector/rector": "^1.2",
    "vimeo/psalm": "^5.26"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "files": [
      "src/Helpers/inertia_helper.php"
    ],
    "psr-4": {
      "Inertia\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tests\\Support\\": "tests/_support/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "analyze": [
      "Composer\\Config::disableProcessTimeout",
      "@phpstan",
      "@psalm",
      "@rector:check"
    ],
    "ci": [
      "Composer\\Config::disableProcessTimeout",
      "@cs:check",
      "@analyze",
      "@test"
    ],
    "cs:check": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
    "cs:fix": "php-cs-fixer fix --ansi --verbose --diff",
    "normalize": "composer normalize --dry-run",
    "normalize:fix": "composer normalize",
    "phpstan": "phpstan analyse --ansi",
    "psalm": "psalm --show-info=true",
    "rector:check": "rector process --dry-run --ansi",
    "rector:fix": "rector process --ansi",
    "test": "pest --colors=always",
    "test:coverage": "XDEBUG_MODE=coverage pest --coverage --colors=always"
  }
}
